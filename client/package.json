{
  "name": "ts-react-tailwind-sp-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://homepage-comes-here/",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "add": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/add-component.ts",
    "add:component": "npm run add -- component",
    "remove": "ts-node scripts/remove-component.ts",
    "remove:component": "npm run remove -- component",
    "check:types": "tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build:analyze": "vite build --mode analyze",
    "clean:empty-folders": "ts-node scripts/clean-empty-folders.ts",
    "typecheck": "npm run check:types",
    "fix": "npm run lint:fix && npm run format",
    "refresh": "npm run clean:empty-folders && npm run lint:fix && npm run check:types",
    "build:server": "tsc -p server/tsconfig.json",
    "postinstall": "prisma generate --schema ./server/src/prisma/schema.prisma && npm run build:server",
    "seed:themes": "NODE_OPTIONS=\"--experimental-specifier-resolution=node\" ts-node-esm scripts/seedThemes.ts",
    "serve:api": "npm --prefix server run start",
    "serve:api:dev": "npm --prefix server run dev",
    "db:reset": "prisma db push --schema ./server/src/prisma/schema.prisma --force-reset && npm --prefix server run prisma:seed"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/vite": "^4.1.7",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.16.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.9.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.6",
    "tailwindcss": "^4.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
